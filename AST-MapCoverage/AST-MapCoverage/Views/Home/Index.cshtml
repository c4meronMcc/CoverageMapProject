    .CountryInfo{
        
        color: white;
        padding-top: 8vh;  
        font-family: sans-serif;
        font-style:normal;
    }

    .headerImg{
        height:20vh;
        width: 100%;
    }
    
    .topDiv{
        background-color: #182335;
        height:31vh;
        border-bottom:solid 0.5vh orange;
        
    }
</style>



